<!DOCTYPE html>
<html lang="en">

<head>
    {{>headLinks}}
    <title>Weather Insights</title>
</head>

<body>
    {{>navBar}}
    <!-- Main Header -->
    <div class="container-fluid main_div_weather">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto" style="margin-top: -6rem;">
        
        <div class="main_content">
            <form action="" class="temp_form">
                <input type="text" id="cityName" placeholder="Enter City Name" autocomplete="off">
                <input type="submit" value="search" id="submitBtn">
            </form>
        </div>

        <div class="tempInfo">
            <div class="top_layer">
                <p id="day">Tuesday</p>
                <p id="today_date"></p>
            </div>

            <div class="main_layer">
                <p id="city_name">Get Output Here</p>
                <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>

    {{>footer}}
    {{>bodyLinks}}

    <script src="js/main.js"></script>
</body>

</html>